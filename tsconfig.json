{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist"
  },
  "include": ["**/*.ts", "**/*.vue"],
  "exclude": [
    "node_modules",
    "electronPackager",
    "packed",
    "dist",
    "vite.config.ts",
    "src/renderer/index.ts"
  ]
}
