{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist"
  },
  "include": ["**/*.ts", "src/main/preload.ts"],
  "exclude": [
    "node_modules",
    "electronPackager",
    "packed",
    "dist",
    "chromeBinaries"
  ]
}
