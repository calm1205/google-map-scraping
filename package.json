{
  "name": "web-scraping",
  "version": "1.0.0",
  "productName": "web-scraping",
  "description": "web scraping with electron",
  "type": "module",
  "main": "dist/main/main.js",
  "author": "calm1205",
  "scripts": {
    "transpile": "tsc && tsc-alias",
    "view:sync": "./scripts/copy-view.sh && ./scripts/sync-index-html.sh",
    "tailwind": "tailwindcss -i src/input.css -o dist/output.css --watch",
    "build": "npm run transpile && ./scripts/copy-view.sh && tailwindcss -i src/input.css -o dist/output.css",
    "build:sync": "concurrently 'npm run transpile' 'npm run view:sync' 'npm run tailwind'",
    "start": "electron .",
    "package": "electron-packager . web-scraping --overwrite",
    "package:win": "electron-packager . web-scraping --platform=win32 --arch=x64 --overwrite",
    "get:chrome": "npx puppeteer browsers install chrome"
  },
  "dependencies": {
    "puppeteer": "^22.11.0"
  },
  "devDependencies": {
    "@electron/packager": "^18.3.2",
    "@types/node": "^20.13.0",
    "concurrently": "^8.2.2",
    "electron": "^30.1.0",
    "prettier": "3.3.1",
    "tailwindcss": "^3.4.4",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5"
  }
}
