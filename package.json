{
  "name": "web-scraping",
  "version": "1.0.0",
  "productName": "web-scraping",
  "description": "web scraping with electron",
  "type": "module",
  "main": "dist/main.js",
  "author": "calm1205",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc && ./scripts/copy-view.sh",
    "tailwind": "npx tailwindcss -i src/input.css -o dist/output.css --watch",
    "build:sync": "concurrently 'tsc --watch' './scripts/sync-index-html.sh' 'npm run tailwind'",
    "electron": "concurrently 'npm run build:sync' 'electron .'",
    "start": "concurrently 'npm run build:sync' 'electron-forge start'",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "selenium-webdriver": "^4.21.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@types/node": "^20.13.0",
    "@types/selenium-webdriver": "^4.1.23",
    "concurrently": "^8.2.2",
    "electron": "^30.1.0",
    "prettier": "3.3.1",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.13",
    "vite-plugin-node-polyfills": "^0.22.0"
  }
}
